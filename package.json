{
  "name": "poc-mcp-server",
  "version": "1.0.0",
  "description": "POC MCP Server with tools and operations-sdk integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "server",
    "poc"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.7.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "dotenv": "^16.4.5",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.28",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitest/coverage-v8": "^1.4.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsx": "^4.19.3",
    "typescript": "^5.4.2",
    "vitest": "^1.4.0"
  }
}